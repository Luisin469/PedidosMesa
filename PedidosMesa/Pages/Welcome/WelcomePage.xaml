<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dimension="clr-namespace:PedidosMesa.Utils"
             xmlns:skiaLottie="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
             x:Class="PedidosMesa.Pages.Welcome.WelcomePage"
             Background="White"
             Title=""
             Shell.FlyoutBehavior="Disabled"
             Shell.BackgroundColor="White">

    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <Label
         Text="Bienvenido"
         TextColor="#829CBD"
         FontFamily="NunitoRegular"
         FontSize="{dimension:PixelToMaui Pixels=18}"
         VerticalOptions="Center"
         HorizontalOptions="Center" />

        <skiaLottie:SKLottieView
         Source="welcome.json"
         HeightRequest="{dimension:PixelToMaui Pixels=128}"
         WidthRequest="{dimension:PixelToMaui Pixels=72}"
         ScaleY="-1"
         TranslationY="{dimension:PixelToMaui Pixels=-80}"
         RepeatCount="-1"
         HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>